<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/showDialogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Show Dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/showDatePickerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Show DatePicker"
        app:layout_constraintEnd_toEndOf="@+id/showDialogButton"
        app:layout_constraintStart_toStartOf="@+id/showDialogButton"
        app:layout_constraintTop_toBottomOf="@+id/showDialogButton" />

    <Button
        android:id="@+id/showCustomDialogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Show Custom Dialog"
        app:layout_constraintEnd_toEndOf="@+id/showDatePickerButton"
        app:layout_constraintStart_toStartOf="@+id/showDatePickerButton"
        app:layout_constraintTop_toBottomOf="@+id/showDatePickerButton" />

</androidx.constraintlayout.widget.ConstraintLayout>