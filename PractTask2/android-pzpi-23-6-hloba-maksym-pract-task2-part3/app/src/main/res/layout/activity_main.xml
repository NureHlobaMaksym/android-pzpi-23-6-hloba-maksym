<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textField"
        android:layout_width="300dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:hint="Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openSecondActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move to the second activity"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/textField"
        app:layout_constraintStart_toStartOf="@+id/textField"
        app:layout_constraintTop_toBottomOf="@+id/textField" />

    <Button
        android:id="@+id/openCounterActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move to the counter activity"
        app:layout_constraintEnd_toEndOf="@+id/openSecondActivityButton"
        app:layout_constraintStart_toStartOf="@+id/openSecondActivityButton"
        app:layout_constraintTop_toBottomOf="@+id/openSecondActivityButton" />

    <Button
        android:id="@+id/openTimerActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move to the timer activity"
        app:layout_constraintEnd_toEndOf="@+id/openCounterActivityButton"
        app:layout_constraintStart_toStartOf="@+id/openCounterActivityButton"
        app:layout_constraintTop_toBottomOf="@+id/openCounterActivityButton" />



</androidx.constraintlayout.widget.ConstraintLayout>